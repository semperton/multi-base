{
    "name": "semperton/multibase",
    "description": "Base transcoder with multibyte character alphabet support.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "Semperton\\Multibase\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit tests",
        "check": "psalm",
        "bench": "phpbench run benchmarks --report=benchmark"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.24",
        "phpbench/phpbench": "^1.2"
    },
    "suggest": {
        "ext-gmp": "Install GMP extension for fast conversion up to base 62."
    }
}